* {
  box-sizing: border-box;
}

html, body {
  width: 100%;
  height: 100%;
  margin: 0;
}

body {
  font-family: 'Julius Sans One', sans-serif;
  a {
    font-weight: bold;
    text-decoration: none;
    text-transform: uppercase;
  }
}

body {
 background-color: #EEEFF3;
}

button {
  background-color: white;
  width: 155px;
  a {
    color: black;
    text-decoration: none;
  }
}

.input-box {
  border: 1px solid #888888;
  border-radius: 8px;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
