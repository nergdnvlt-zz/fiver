<div class="row">
  <div class="six columns tweet-page">

    <% @analyzer.tweets.each do |tweet| %>
      <div class="ten columns tweet">
        <h6><%= tweet.text %></h6>
      </div>
    <% end %>

  </div>

  <div class="six columns tweet-page">

    <div class="ten columns tone-name">
      <%= @analyzer.tone.name %>
    </div>

    <div class="ten columns tone-score">
      <%= @analyzer.tone.score %>
    </div>

  </div>
</div>