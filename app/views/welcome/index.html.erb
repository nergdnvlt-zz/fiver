<div class="container">
  <div class='welcome-index'>
  <% if current_user %>

    <div class="row">
      <div class="twelve columns welcome">
        <button class="welcome">
          <%= link_to 'Dashboard', user_path(current_user.slug) %>
        </button>
      </div>
    </div>

  <% else %>
    <div class="row">
          <div class="row welcome">

            <div class="row">
              <div class="three columns welcome">
                <h6> Existing Account? Login Here: </h6>
              </div>
            </div>

            <div class="row">
              <div class="three columns welcome">
                <button class="welcome">
                  <a href="#">Google Auth</a>
                </button>
              </div>
            </div>
        </div>

        <div class="six columns welcome">
          <h6> Existing Account? Login Here: </h6><br>
          <button class="welcome">
            <%= link_to 'Login', login_path %>
          </button>
        </div>
      </div>

    <div class="row register">
      <div class="twelve columns welcome register">
        <h6> Create an account here: </h6>
        <button class="welcome">
          <%= link_to 'Register', new_user_path %>
        </button>
      </div>
    </div>
  <% end %>

  </div>
</div>
